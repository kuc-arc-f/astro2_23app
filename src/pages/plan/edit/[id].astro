                <label for="content">内容</label>
                <textarea id="content" name="content" required
                class="form-control"
                rows="10">{item.content}</textarea>
            </div>
            <hr />			
        </div>
        <button id="btn_save" class="btn btn-primary">Save</button>
    </main>
